{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch with File Path",
            "type": "cppdbg",
            "request": "launch",
            "program": "/home/pedrowsl/cbm/main_debug",
            "args": [
                "--filePath=/home/pedrowsl/cbm/instances/h5"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
    ]
}